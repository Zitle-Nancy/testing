{
  "parserOptions": {
    "ecmaVersion": 2020,
    /*
     * @params module o files, en este caso ser치 modulo
     * porque los archivos de javascript ser치n modulos.
     */
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    /*
     * para este ejemplo se usar치 Babel, por ende el strict mode etar치 por default.
     */
    "strict": ["error", "never"],
    /*
     * No compila el programa si tiene un typo, si no desea
     * este comportamineto cambiar warn en vez de error o solo off.
     */
    "valid-typeof": "error",
    "no-unsafe-negation": "error",
    "no-unused-vars": "error",
    "no-unexpected-multiline": "error",
    "no-undef": "error"
  },
  "env": {
    "browser": true
  }
}